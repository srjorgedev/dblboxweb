---
import Layout from "../../layouts/Layout.astro";
import { db, Account, eq } from "astro:db";
import type { Lang } from "../../types/lang.types";
import { isValidLang } from "../../utils/i18n";

const { lang } = Astro.params as { lang: Lang };
const user = Astro.locals.user;

if (!isValidLang(lang)) {
	return new Response(null, { status: 404 });
}

if (!user) {
    return Astro.redirect(`/${lang}/login`);
}

// Fetch linked accounts
const linkedAccounts = await db.select()
    .from(Account)
    .where(eq(Account.userId, user.id));

const hasPasswordAccount = linkedAccounts.some(acc => acc.provider === "password");

const error = Astro.url.searchParams.get("error");
const success = Astro.url.searchParams.get("success");

const messages: Record<string, string> = {
    invalid_username: "El nombre de usuario debe tener al menos 3 caracteres.",
    password_too_short: "La nueva contraseña debe tener al menos 8 caracteres.",
    invalid_current_password: "La contraseña actual es incorrecta.",
    missing_current_password: "Debes introducir tu contraseña actual.",
    profile_updated: "Perfil actualizado correctamente.",
    password_updated: "Contraseña actualizada correctamente.",
    server_error: "Error en el servidor. Inténtalo de nuevo.",
    default: "Ocurrió un error inesperado."
};
---

<Layout lang={lang} title="Mi Perfil - DBLBox">
    <div class="profile-container">
        <h1>Mi Perfil</h1>

        {error && <p class="message error">{messages[error] || messages.default}</p>}
        {success && <p class="message success">{messages[success]}</p>}

        <section class="profile-section">
            <h2>Datos de Usuario</h2>
            <form action="/api/auth/update-profile" method="POST" class="auth-form">
                <input type="hidden" name="lang" value={lang} />
                <div class="form-group">
                    <label for="username">Nombre de Usuario</label>
                    <input type="text" id="username" name="username" value={user.username} required minlength="3" />
                </div>
                <button type="submit" class="btn-secondary">Actualizar Nombre</button>
            </form>
        </section>

        <section class="profile-section">
            <h2>Seguridad</h2>
            <form action="/api/auth/change-password" method="POST" class="auth-form">
                <input type="hidden" name="lang" value={lang} />
                
                {hasPasswordAccount && (
                    <div class="form-group">
                        <label for="current_password">Contraseña Actual</label>
                        <input type="password" id="current_password" name="current_password" required />
                    </div>
                )}

                <div class="form-group">
                    <label for="new_password">{hasPasswordAccount ? "Nueva Contraseña" : "Crear Contraseña"}</label>
                    <input type="password" id="new_password" name="new_password" required minlength="8" />
                </div>

                <button type="submit" class="btn-secondary">
                    {hasPasswordAccount ? "Cambiar Contraseña" : "Establecer Contraseña"}
                </button>
            </form>
        </section>

        <section class="profile-section">
            <h2>Cuentas Vinculadas</h2>
            <ul class="accounts-list">
                {linkedAccounts.map(account => (
                    <li class="account-item">
                        <span class={`provider-icon ${account.provider}`}></span>
                        <div class="account-info">
                            <span class="provider-name">{account.provider.toUpperCase()}</span>
                            <span class="provider-id">{account.email || account.providerAccountId}</span>
                        </div>
                    </li>
                ))}
            </ul>
            
            <div class="add-account">
                <p>Vincular más cuentas:</p>
                <div class="oauth-links">
                    {!linkedAccounts.some(a => a.provider === 'google') && (
                        <a href="/login/google" class="btn-oauth google">Google</a>
                    )}
                    {!linkedAccounts.some(a => a.provider === 'twitch') && (
                        <a href="/login/twitch" class="btn-oauth twitch">Twitch</a>
                    )}
                </div>
            </div>
        </section>
    </div>
</Layout>

<style>
    .profile-container {
        max-width: 600px;
        margin: 2rem auto;
        padding: 2rem;
        background: var(--main);
        border-radius: 8px;
        color: var(--text-main);
    }

    h1 {
        margin-bottom: 2rem;
        font-size: 2rem;
        border-bottom: 1px solid var(--third);
        padding-bottom: 0.5rem;
    }

    h2 {
        font-size: 1.2rem;
        margin-bottom: 1rem;
        color: var(--color-highlight);
    }

    .profile-section {
        margin-bottom: 3rem;
        padding: 1.5rem;
        background: var(--bg);
        border-radius: 6px;
    }

    .message {
        padding: 1rem;
        border-radius: 4px;
        margin-bottom: 1.5rem;
        font-size: 0.9rem;
    }

    .message.error {
        background: rgba(239, 68, 68, 0.1);
        color: #ef4444;
        border: 1px solid rgba(239, 68, 68, 0.2);
    }

    .message.success {
        background: rgba(34, 197, 94, 0.1);
        color: #22c55e;
        border: 1px solid rgba(34, 197, 94, 0.2);
    }

    .auth-form {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        gap: 0.4rem;
    }

    label {
        font-size: 0.85rem;
        color: var(--text-second);
    }

    input {
        padding: 0.75rem;
        background: var(--main);
        border: 1px solid var(--third);
        border-radius: 4px;
        color: var(--text-main);
    }

    .btn-secondary {
        align-self: flex-start;
        padding: 0.6rem 1.2rem;
        background: var(--third);
        color: var(--text-main);
        border-radius: 4px;
        cursor: pointer;
        font-weight: bold;
        transition: background 0.2s;
    }

    .btn-secondary:hover {
        background: var(--main-hover);
    }

    .accounts-list {
        list-style: none;
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
        margin-bottom: 1.5rem;
    }

    .account-item {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 0.75rem;
        background: var(--main);
        border-radius: 4px;
    }

    .account-info {
        display: flex;
        flex-direction: column;
    }

    .provider-name {
        font-weight: bold;
        font-size: 0.8rem;
    }

    .provider-id {
        font-size: 0.75rem;
        color: var(--text-second);
    }

    .add-account {
        border-top: 1px solid var(--third);
        padding-top: 1rem;
    }

    .add-account p {
        font-size: 0.85rem;
        margin-bottom: 0.75rem;
    }

    .oauth-links {
        display: flex;
        gap: 1rem;
    }

    .btn-oauth {
        padding: 0.5rem 1rem;
        border-radius: 4px;
        text-decoration: none;
        font-size: 0.85rem;
        font-weight: bold;
        color: white;
    }

    .btn-oauth.google { background: #4285F4; }
    .btn-oauth.twitch { background: #9146FF; }
</style>
