---
import SidebarLang from "../components/dashboard/SidebarLang.astro";
import { isValidLang } from "../utils/i18n";
import type { Lang } from "../types/lang.types";

const { lang: paramLang } = Astro.params;
const lang = isValidLang(paramLang) ? paramLang as Lang : "es";

const { user } = Astro.locals;
---

<!doctype html>
<html lang={lang}>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Dashboard - DBLBox</title>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    </head>
    <body>
        <div class="dash-layout">
            <aside class="sidebar">
                <div class="sidebar-header">
                    <span class="logo">DBLBox</span>
                </div>

                <nav class="sidebar-nav">
                    <ul>
                        <li><a href={`/${lang}/dashboard`} class:list={["nav-item", { active: Astro.url.pathname.endsWith("/dashboard") }]}>Units Database</a></li>
                        <li><a href="#" class="nav-item">Game Data</a></li>
                        <li><a href="#" class="nav-item">Community</a></li>
                        <li><a href={`/${lang}/dashboard/users`} class:list={["nav-item", { active: Astro.url.pathname.includes("/dashboard/users") }]}>User Management</a></li>
                        <li><a href="#" class="nav-item">Equipment</a></li>
                    </ul>
                </nav>

                <SidebarLang />

                <div class="sidebar-footer">
                    {user && (
                        <div class="sidebar-user-info">
                            <div class="user-profile-info">
                                <img src={user.avatar} alt={user.username} class="user-avatar-large" referrerpolicy="no-referrer" />
                                <div class="user-id-info">
                                    <span class="sidebar-username">{user.username}</span>
                                    <span class="sidebar-role">{user.role.charAt(0).toUpperCase() + user.role.slice(1)}</span>
                                </div>
                            </div>
                            
                            <div class="sidebar-actions-footer">
                                <a href={`/${lang}/`} class="sidebar-btn-footer">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path><polyline points="9 22 9 12 15 12 15 22"></polyline></svg>
                                    <span>Back to Main Site</span>
                                </a>

                                <form action="/api/logout" method="POST" class="w-full">
                                    <button type="submit" class="sidebar-btn-footer logout">
                                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path><polyline points="16 17 21 12 16 7"></polyline><line x1="21" y1="12" x2="9" y2="12"></line></svg>
                                        <span>Sign Out</span>
                                    </button>
                                </form>
                            </div>
                        </div>
                    )}
                </div>
            </aside>
            
            <div class="main-content-wrapper">
                <header class="top-bar">
                    <div class="header-left">
                        <button id="sidebar-toggle" class="sidebar-toggle" aria-label="Toggle Sidebar">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="3" y1="12" x2="21" y2="12"></line><line x1="3" y1="6" x2="21" y2="6"></line><line x1="3" y1="18" x2="21" y2="18"></line></svg>
                        </button>
                    </div>
                </header>
                
                <main class="page-content">
                    <slot />
                </main>
            </div>
        </div>
        
        <script>
            const toggle = document.getElementById('sidebar-toggle');
            const sidebar = document.querySelector('.sidebar');
            const overlay = document.createElement('div');
            overlay.className = 'sidebar-overlay';
            document.body.appendChild(overlay);

            if (toggle && sidebar) {
                toggle.addEventListener('click', () => {
                    sidebar.classList.toggle('open');
                    overlay.classList.toggle('active');
                });
                
                overlay.addEventListener('click', () => {
                    sidebar.classList.remove('open');
                    overlay.classList.remove('active');
                });
            }
        </script>
    </body>
</html>

<style is:global>
    :root {
        --sidebar-width: 260px;
        --header-height: 64px;
        --bg-color: #121212;
        --text-color: #e0e0e0;
        --sidebar-bg: #000000;
        --sidebar-text: #a0a0a0;
        --primary-color: #3b82f6;
        --header-bg: #1e1e1e;
        --border-color: #333;
    }

    *, *::after, *::before {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Inter', sans-serif;
        background-color: var(--bg-color);
        color: var(--text-color);
        height: 100vh;
        overflow: hidden;
    }

    a { text-decoration: none; color: inherit; }

    .dash-layout {
        display: flex;
        height: 100%;
        position: relative;
    }

    /* Sidebar */
    .sidebar {
        width: var(--sidebar-width);
        background-color: var(--sidebar-bg);
        color: var(--sidebar-text);
        display: flex;
        flex-direction: column;
        flex-shrink: 0;
        transition: transform 0.3s ease;
        z-index: 50;
        border-right: 1px solid var(--border-color);
    }

    .sidebar-header {
        height: var(--header-height);
        display: flex;
        align-items: center;
        padding: 0 1.5rem;
        border-bottom: 1px solid var(--border-color);
    }

    .logo {
        font-size: 1.25rem;
        font-weight: 700;
        color: white;
        letter-spacing: -0.025em;
    }

    .sidebar-nav {
        flex: 1;
        padding: 1.5rem 0;
        overflow-y: auto;
    }

    .sidebar-nav ul {
        list-style: none;
    }

    .nav-item {
        display: block;
        padding: 0.75rem 1.5rem;
        font-size: 0.95rem;
        color: var(--sidebar-text);
        transition: all 0.2s;
        border-left: 3px solid transparent;
    }

    .nav-item:hover, .nav-item.active {
        background-color: rgba(255,255,255,0.05);
        color: white;
    }

    .nav-item.active {
        border-left-color: var(--primary-color);
    }

    /* Sidebar Footer */
    .sidebar-footer {
        padding: 1.5rem;
        border-top: 1px solid var(--border-color);
    }

    .sidebar-user-info {
        display: flex;
        flex-direction: column;
        gap: 1.25rem;
    }

    .user-profile-info {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .user-avatar-large {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        border: 2px solid var(--primary-color);
        object-fit: cover;
    }

    .user-id-info {
        display: flex;
        flex-direction: column;
    }

    .sidebar-username {
        font-size: 0.95rem;
        font-weight: 600;
        color: #fff;
    }

    .sidebar-role {
        font-size: 0.75rem;
        color: #666;
    }

    .sidebar-actions-footer {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .sidebar-btn-footer {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        background: #111;
        border: 1px solid #222;
        color: #888;
        padding: 0.6rem 0.8rem;
        border-radius: 6px;
        font-size: 0.85rem;
        font-weight: 500;
        transition: all 0.2s;
        cursor: pointer;
        width: 100%;
        text-decoration: none;
    }

    .sidebar-btn-footer:hover {
        background: #1a1a1a;
        color: #fff;
        border-color: #333;
    }

    .sidebar-btn-footer.logout:hover {
        background: rgba(239, 68, 68, 0.1);
        border-color: rgba(239, 68, 68, 0.2);
        color: #ef4444;
    }

    .w-full { width: 100%; }

    /* Main Content Wrapper */
    .main-content-wrapper {
        flex: 1;
        display: flex;
        flex-direction: column;
        overflow: hidden;
        width: 100%;
    }

    /* Top Bar */
    .top-bar {
        height: var(--header-height);
        background-color: var(--header-bg);
        border-bottom: 1px solid var(--border-color);
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0 2rem;
        flex-shrink: 0;
    }
    
    .header-left {
        display: flex;
        align-items: center;
        gap: 1rem;
    }
    
    .sidebar-toggle {
        display: none;
        background: none;
        border: none;
        cursor: pointer;
        color: var(--text-color);
    }

    /* Page Content */
    .page-content {
        flex: 1;
        overflow-y: auto;
    }
    
    .sidebar-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0,0,0,0.5);
        z-index: 40;
        opacity: 0;
        transition: opacity 0.3s;
    }
    
    .sidebar-overlay.active {
        display: block;
        opacity: 1;
    }

    /* Responsive */
    @media (max-width: 768px) {
        .sidebar {
            position: absolute;
            height: 100%;
            transform: translateX(-100%);
        }
        
        .sidebar.open {
            transform: translateX(0);
            box-shadow: 4px 0 8px rgba(0,0,0,0.1);
        }
        
        .sidebar-toggle {
            display: block;
        }
        
        .top-bar {
            padding: 0 1rem;
        }

        .main-content-wrapper {
            width: 100%;
        }
    }
</style>