---
import type { Data } from "../../types/data.types";
import DropArrow from "../svg/DropArrow.astro";

interface Props {
    data: Data[];
    name: string;
    label: string;
}

const { data, name, label } = Astro.props;
---

<div class="select-container">
    <select name={name} id={name} class={`select-${name} custom-select`} data-label={label}>
        <option value="0" selected>Todos</option>
        {
            data.map((el) => {
                return <option value={el.id} data-name={el.name}>{el.name}</option>;
            })
        }
    </select>
    <label class="custom-label" for={name}>
        <span class="label-prefix">{label}:</span>
        <span class="label-value">Todos</span>
    </label>
    <div class="icon-container">
        <DropArrow />
    </div>
</div>

<style>
    div.select-container {
        display: flex;
        flex-direction: column;
        margin-right: 0;
        position: relative;

        & .custom-label {
            position: absolute;
            inset: 0;
            display: flex;
            align-items: center;
            padding: 0 2.5rem 0 0.75rem;
            pointer-events: none;
            z-index: 9;
            font-size: 0.875rem;
            white-space: nowrap;
            overflow: hidden;
            
            & .label-prefix {
                color: #ffffff;
                margin-right: 0.35rem;
                font-weight: 500;
                display: none; 
            }

            & .label-value {
                color: #9ca3af;
                text-overflow: ellipsis;
                overflow: hidden;
                transition: color 0.2s ease;
            }
        }

        & select {
            padding: 0.5rem 2.5rem 0.5rem 0.75rem;
            border: 1px solid rgba(255, 255, 255, 0.2);
            background-color: rgba(255, 255, 255, 0.05);
            color: transparent; 
            border-radius: 8px;
            font-size: 0.875rem;
            width: 100%;
            min-width: 10rem;
            max-width: 14rem;
            white-space: nowrap;
            text-overflow: ellipsis;
            cursor: pointer;
            transition: all 0.2s ease;
            appearance: none;

            &:hover {
                background-color: rgba(255, 255, 255, 0.1);
                border-color: rgba(255, 255, 255, 0.3);
            }

            &:focus {
                outline: none;
                border-color: rgba(255, 255, 255, 0.5);
                background-color: rgba(255, 255, 255, 0.1);
            }

            & option {
                background-color: #1a1a1a;
                color: #fff;
                padding: 0.5rem;
            }
        }

        & .icon-container {
            position: absolute;
            right: 0.75rem;
            top: 50%;
            transform: translateY(-50%);
            pointer-events: none;
            width: 1rem;
            height: 1rem;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #9ca3af;
            transition: transform 0.2s ease;
            z-index: 10;
        }

        & select.selected {
            border-color: rgba(255, 255, 255, 0.4);

            & + .custom-label {
                & .label-prefix {
                    display: inline;
                }
                & .label-value {
                    color: #ffffff;
                    font-weight: 500;
                }
            }

            & ~ .icon-container {
                color: #ffffff;
            }
        }

        & select:focus ~ .icon-container {
            transform: translateY(-50%) rotate(180deg);
        }
    }
</style>

<script>
    function setupSelects() {
        const containers = document.querySelectorAll<HTMLElement>('.select-container');
        
        containers.forEach(container => {
            const select = container.querySelector<HTMLSelectElement>('.custom-select');
            const labelValue = container.querySelector<HTMLElement>('.label-value');
            
            if (!select || !labelValue) return;

            const updateUI = () => {
                const selectedOption = select.options[select.selectedIndex];
                const originalName = selectedOption.getAttribute('data-name');
                
                if (select.value === "0") {
                    select.classList.remove('selected');
                    labelValue.textContent = "Todos";
                } else {
                    select.classList.add('selected');
                    if (originalName) {
                        labelValue.textContent = originalName;
                    }
                }
            };

            select.addEventListener('change', updateUI);
            updateUI();
        });
    }

    setupSelects();
    document.addEventListener('astro:after-swap', setupSelects);
</script>