---
import type { Lang } from "../../types/lang.types";

const user = Astro.locals.user;

interface Props {
    lang: Lang;
}

const { lang } = Astro.props;
---

{
    user != null && (
        <div class="user-widget">
            <div class="user-profile">
                {user.avatar ? (
                    <img referrerpolicy="no-referrer" src={user.avatar} alt="User Avatar" class="user-avatar" />
                ) : (
                    <div class="user-avatar placeholder">
                        {user.username.charAt(0).toUpperCase()}
                    </div>
                )}
            </div>
            <div class="user-controls">
                <a href={`/${lang}/profile`} class="control-item">
                    Mi Perfil
                </a>
                <form action="/api/logout" method="POST">
                    <button type="submit" class="control-item logout-btn">
                        Salir
                    </button>
                </form>
            </div>
        </div>
    )
}

<script>
    const userProfile = document.querySelector<HTMLDivElement>(".user-profile");
    const userControls =
        document.querySelector<HTMLDivElement>(".user-controls");

    if (userProfile && userControls) {
        userProfile.addEventListener("click", () => {
            userControls.classList.toggle("active");
        });

        document.addEventListener("click", (event: PointerEvent) => {
            if (
                !userProfile.contains(event.target as Node) &&
                !userControls.contains(event.target as Node)
            ) {
                userControls.classList.remove("active");
            }
        });
    }
</script>

<style>
    .user-widget {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 2.5rem;
        width: 2.5rem;
        position: relative;

        & .user-controls.active {
            visibility: visible;
        }

        & .user-controls {
            display: flex;
            flex-direction: column;

            visibility: hidden;

            position: absolute;
            top: 100%;
            right: 0;
            margin-top: 0.5rem;

            width: max-content;
            min-width: 140px;

            background: #1e1e1e;
            border: 1px solid #333;
            border-radius: 8px;
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.5);
            overflow: hidden;
            z-index: 100;

            & form {
                width: 100%;
                margin: 0;
            }

            & a,
            button {
                display: block;
                width: 100%;
                text-decoration: none;
                font-size: 1rem;
                padding: 0.75rem 1rem;
                text-align: left;
                background: none;
                border: none;
                cursor: pointer;
                color: #e0e0e0;
                transition: background 0.2s;

                &:hover {
                    background-color: #2a2a2a;
                }
            }

            & .logout-btn {
                color: #ef4444;
            }
        }

        & .user-profile {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
            height: 100%;
            cursor: pointer;
            border-radius: 50%;
            transition: box-shadow 0.2s;

            &:hover {
                box-shadow: 0 0 0 2px #3b82f6;
            }

            .user-avatar {
                width: 100%;
                height: 100%;
                object-fit: cover;
                border-radius: 50%;

                &.placeholder {
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    background-color: var(--third);
                    color: var(--text-main);
                    font-weight: bold;
                    font-size: 1.2rem;
                }
            }
        }
    }
</style>
