<svg
    width="360"
    height="360"
    viewBox="0 0 360 360"
    fill="none"
    xmlns="http://www.w3.org/2000/svg"
>
    <!-- Parte superior: rectángulo que sobresale -->
    <rect
        x="162"
        y="14"
        width="36"
        height="62"
        rx="12"
        fill="#E3EAE4"
        stroke="#BFC8C1"
        stroke-width="2"></rect>

    <!-- Rectángulo acostado encima -->
    <rect
        x="140"
        y="6"
        width="80"
        height="22"
        rx="11"
        fill="#E3EAE4"
        stroke="#BFC8C1"
        stroke-width="2"></rect>

    <!-- Círculo exterior (plateado) -->
    <circle
        cx="180"
        cy="196"
        r="150"
        fill="#E7EEE8"
        stroke="#C6CEC8"
        stroke-width="3"></circle>

    <!-- Círculo interior (verde) -->
    <circle cx="180" cy="196" r="128" fill="#0A6B2A"></circle>

    <defs>
        <clipPath id="screenClip">
            <circle cx="180" cy="196" r="128"></circle>
        </clipPath>
    </defs>

    <g clip-path="url(#screenClip)">
        <!-- ===================== -->
        <!-- 2 ONDAS DE PARPADEO -->
        <!-- ===================== -->

        <!-- Onda 1 -->
        <circle
            cx="180"
            cy="196"
            r="6"
            fill="none"
            stroke="#46FF78"
            stroke-width="10"
            opacity="0"
        >
            <animate
                attributeName="r"
                values="6;55;105;140"
                dur="4.0s"
                repeatCount="indefinite"></animate>
            <animate
                attributeName="opacity"
                values="0;0.20;0.12;0"
                dur="4.0s"
                repeatCount="indefinite"></animate>
            <animate
                attributeName="stroke-width"
                values="10;8;6;4"
                dur="4.0s"
                repeatCount="indefinite"></animate>
        </circle>

        <!-- Onda 2 (misma animación pero con delay) -->
        <circle
            cx="180"
            cy="196"
            r="6"
            fill="none"
            stroke="#46FF78"
            stroke-width="10"
            opacity="0"
        >
            <animate
                attributeName="r"
                values="6;55;105;140"
                dur="4.0s"
                begin="1.1s"
                repeatCount="indefinite"></animate>
            <animate
                attributeName="opacity"
                values="0;0.18;0.10;0"
                dur="4.0s"
                begin="1.1s"
                repeatCount="indefinite"></animate>
            <animate
                attributeName="stroke-width"
                values="10;8;6;4"
                dur="4.0s"
                begin="1.1s"
                repeatCount="indefinite"></animate>
        </circle>

        <!-- ===================== -->
        <!-- CUADRÍCULA -->
        <!-- ===================== -->
        <g stroke="#79FF8E" stroke-width="1.2" opacity="0.30">
            <!-- Verticales -->
            <line x1="60" y1="60" x2="60" y2="332"></line>
            <line x1="78" y1="60" x2="78" y2="332"></line>
            <line x1="96" y1="60" x2="96" y2="332"></line>
            <line x1="114" y1="60" x2="114" y2="332"></line>
            <line x1="132" y1="60" x2="132" y2="332"></line>
            <line x1="150" y1="60" x2="150" y2="332"></line>
            <line x1="168" y1="60" x2="168" y2="332"></line>
            <line x1="186" y1="60" x2="186" y2="332"></line>
            <line x1="204" y1="60" x2="204" y2="332"></line>
            <line x1="222" y1="60" x2="222" y2="332"></line>
            <line x1="240" y1="60" x2="240" y2="332"></line>
            <line x1="258" y1="60" x2="258" y2="332"></line>
            <line x1="276" y1="60" x2="276" y2="332"></line>
            <line x1="294" y1="60" x2="294" y2="332"></line>
            <line x1="312" y1="60" x2="312" y2="332"></line>

            <!-- Horizontales -->
            <line x1="46" y1="78" x2="314" y2="78"></line>
            <line x1="46" y1="96" x2="314" y2="96"></line>
            <line x1="46" y1="114" x2="314" y2="114"></line>
            <line x1="46" y1="132" x2="314" y2="132"></line>
            <line x1="46" y1="150" x2="314" y2="150"></line>
            <line x1="46" y1="168" x2="314" y2="168"></line>
            <line x1="46" y1="186" x2="314" y2="186"></line>
            <line x1="46" y1="204" x2="314" y2="204"></line>
            <line x1="46" y1="222" x2="314" y2="222"></line>
            <line x1="46" y1="240" x2="314" y2="240"></line>
            <line x1="46" y1="258" x2="314" y2="258"></line>
            <line x1="46" y1="276" x2="314" y2="276"></line>
            <line x1="46" y1="294" x2="314" y2="294"></line>
            <line x1="46" y1="312" x2="314" y2="312"></line>
            <line x1="46" y1="330" x2="314" y2="330"></line>
        </g>

        <!-- Triángulo rojo centro -->
        <polygon points="180,180 168,204 192,204" fill="#E4362B"></polygon>

        <!-- ===================== -->
        <!-- ESFERA DEL DRAGÓN -->
        <!-- ===================== -->
        <g id="dragonBall">
            <!-- Glow extra que aparece cuando la onda llega -->
            <circle cx="180" cy="132" r="24" fill="#46FF78" opacity="0">
                <!-- La onda llega a la esfera aprox en r=64 (196 -> 132 = 64) -->
                <animate
                    attributeName="opacity"
                    values="0;0;0.55;0;0"
                    keyTimes="0;0.24;0.30;0.36;1"
                    dur="4.0s"
                    repeatCount="indefinite"></animate>
            </circle>

            <!-- Bola -->
            <circle
                cx="180"
                cy="132"
                r="16"
                fill="#FFB000"
                stroke="#FFD36A"
                stroke-width="3"></circle>

            <!-- Estrella -->
            <polygon
                points="180,123 183,130 191,130 184,134 187,142 180,137 173,142 176,134 169,130 177,130"
                fill="#C9342B"></polygon>

            <!-- Brillo leve cuando detecta -->
            <animate
                attributeName="opacity"
                values="1;1;1;0.85;1"
                keyTimes="0;0.24;0.30;0.34;1"
                dur="4.0s"
                repeatCount="indefinite"></animate>
        </g>
    </g>
</svg>
